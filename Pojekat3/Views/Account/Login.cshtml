@using Pojekat3.Models
@model LoginViewModel
<hr />
@{
    ViewBag.Title = "Prijava za registrovane korisnike";
}

<style>

    div.a {
        position: absolute;
        right: 250px;
        width: 200px;
        height: 175px;
    }
</style>

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Lozinka", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, "Zapamti podatke?")
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Uloguj se" class="btn btn-success" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Registrujte se kao nov korisnik", "Register", "AccountController", new { @class = "btn btn-primary" })
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality*@
                <p>
                    @Html.ActionLink("Zaboravili ste šifru?", "ForgotPassword")
                </p>
            }
        </section>
    </div>
    <div class="a">
        <img src="~/Slike/login.jpg" width="300" height="250" />
    </div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}